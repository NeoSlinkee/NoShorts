{
  "manifest_version": 3,
  "name": "Shorts Blocker",
  "version": "1.0.0",
  "description": "Blocks all YouTube Shorts elements and prevents /shorts pages from loading.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "shortsblocker@slinkee",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
